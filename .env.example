# .env file for Telegram Media Backup
# Copy this file to .env and fill in your credentials

# Telegram API credentials (required)
# Get them from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Session settings
SESSION_NAME=telegram_backup_session

# Backup settings
DEFAULT_OUTPUT_DIR=./telegram_media_backup
DEFAULT_MESSAGE_LIMIT=

# Database settings (SQLite backend for improved performance)
# Enable SQLite backend (recommended for better performance)
DB_ENABLE=true

# Path to database file (optional - auto-determined if not set)
# Default: <DEFAULT_OUTPUT_DIR>/telegram_backup.db
# DB_PATH=/path/to/telegram_backup.db

# Fallback to JSON if SQLite fails (recommended during migration)
DB_LEGACY_JSON_FALLBACK=true

# Backup directory for seed script (used when migrating from JSON to SQLite)
# This should point to your existing backup directory containing JSON state files
BACKUP_DIRECTORY=/Volumes/My Passport/telegram_media_backup
