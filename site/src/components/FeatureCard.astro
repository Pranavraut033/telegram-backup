---
interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---

<article class="rounded-xl border border-slate-800 bg-slate-900 p-5">
  <h3 class="text-lg font-semibold text-white">{title}</h3>
  <p class="mt-2 text-sm leading-6 text-slate-300">{text}</p>
</article>
